<div class="col-ms-4 col-md-offset-4">
  <h2> 新增讨论版 </h2>

  <hr>
  <%= form_for @group do |f| %>

    标题
    <%= f.text_field :title %>
    <% if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
    <br>

    叙述
    <br>
    <%= f.text_area :description %>
    <br>

    <%= f.submit " 提 交 ", :disable_with => "提交中。。。" %>
  <% end %>
</div>
